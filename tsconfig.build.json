{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
